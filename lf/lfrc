# Basic Settings
set hidden true
set ignorecase true

# Custom Functions

# make a new directory
cmd mkdir ${{
	printf "Directory Name: "
	read ans
	mkdir $ans
}}

# make a new file
cmd mkfile ${{
	printf "File Name: "
	read ans
	$EDITOR $ans
}}

# using trash-cli
cmd trash ${{
  trash-put "$f"
}}

# unarchive
cmd unarchive ${{
	case "$f" in
		*.zip) unzip "$f" ;;
		*.tar.gz tar -xzvf "$f" ;;
		*.tar.bz2) tar -xjvf "$f" ;;
		*.tar) tar -xcf "$f" ;;
		*) echo "Unsupported format" ;;
	esac
}}

# Trash bindings
cmd trash ${{
  files=$(printf "$fx" | tr '\n' ';')
  while [ "$files" ]; do
    file=${files%%;*}

    trash-put "$(basename "$file")"
    if [ "$files" = "$file" ]; then
      files=''
    else
      files="${files#*;}"
    fi
  done
}}

# Restoring trash
cmd restore_trash ${{
  trash-restore
}}

# Bindings

# Removing defaults
map m
map o
map n
map "'"
map '"'
map d

# Custom keybindings
map c $codium "$f"
map au unarchive

# Basic Functions
map . set hidden!
map DD trash
map p paste
map x cut
map y copy
map <enter> open
map R reload
map mf mkfile
map md mkdir
map C clear

map dd trash
map dr restore_trash

# BOOKMARKS
map gb cd ~/Books
map gD cd ~/Downloads
map gd cd ~/Desktop
map gm cd ~/Music
map gc cd ~/.config
map gB cd /run/media/groth/BOX
